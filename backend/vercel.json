{
  "buildCommand": "echo 'Skipping build - Vercel compiles serverless functions automatically'",
  "installCommand": "npm install",
  "functions": {
    "api/index.ts": {
      "includeFiles": "src/**",
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "rewrites": [
    { "source": "/(.*)", "destination": "/api/index" }
  ]
}
