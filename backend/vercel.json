{
  "buildCommand": "echo 'Skipping build - Vercel compiles serverless functions automatically'",
  "installCommand": "npm install --prefer-offline --no-audit",
  "functions": {
    "api/index.ts": {
      "includeFiles": "src/**,node_modules/@sparticuz/chromium-min/**,node_modules/puppeteer-core/**",
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "rewrites": [
    { "source": "/(.*)", "destination": "/api/index" }
  ]
}
